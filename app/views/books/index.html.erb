<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Book day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Memo</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Email</th>
      <th>Tel</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_day %></td>
        <td><%= book.start_time %></td>
        <td><%= book.end_time %></td>
        <td><%= book.memo %></td>
        <td><%= book.last_name %></td>
        <td><%= book.first_name %></td>
        <td><%= book.email %></td>
        <td><%= book.tel %></td>
        <td><%= book.user_id %></td>
        <td><%= link_to 'Show', user_book_path(current_user, book) %></td>
        <td><%= link_to 'Edit', edit_user_book_path(current_user, book) %></td>
        <td><%= link_to 'Destroy', user_book_path(current_user, book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
